<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <a class="navbar-brand page-scroll" href="/Home/Index/#page-top">
            <img src="~/Content/images/logo2.jpg" />
        </a>
        <div id="top">
            <div class="navbar-header pull-right">
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">

                        <li><a id="h" class="page-scroll" href="/Home/Index/#page-top">Home</a></li>
                        <li><a class="page-scroll" href="/Home/Index/#about">About</a></li>
                        <li><a class="page-scroll" id="r" href="/Home/Index/#register">Register / Login</a></li>
                        <li><a class="page-scroll" href="/Home/Index/#contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
